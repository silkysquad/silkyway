{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Silkyway",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#A855F7",
    "light": "#C084FC",
    "dark": "#7C3AED",
    "background": {
      "dark": "#0c0015",
      "light": "#faf5ff"
    }
  },
  "fonts": {
    "heading": { "family": "DM Mono", "weight": 500 },
    "body": { "family": "Inter", "weight": 400 }
  },
  "css": "/custom.css",
  "background": {
    "decoration": "grid"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/silkyway-protocol"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://silk.silkyway.ai"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "guides/welcome",
              "guides/why-silkyway",
              "guides/how-it-works"
            ]
          },
          {
            "group": "Getting Started",
            "pages": [
              "guides/quickstart"
            ]
          },
          {
            "group": "Use Cases",
            "pages": [
              "guides/use-cases/ai-agents",
              "guides/use-cases/agentic-commerce",
              "guides/use-cases/self-sustaining-agents"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "guides/glossary"
            ]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "sdk/introduction",
              "sdk/quickstart"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "sdk/error-handling"
            ]
          },
          {
            "group": "CLI Reference",
            "pages": [
              "sdk/reference/wallet",
              "sdk/reference/account",
              "sdk/reference/payments",
              "sdk/reference/config"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Wallets",
            "pages": [
              "api-reference/wallets/balance"
            ]
          },
          {
            "group": "Transfers",
            "pages": [
              "api-reference/transfers/create",
              "api-reference/transfers/claim",
              "api-reference/transfers/cancel",
              "api-reference/transfers/list",
              "api-reference/transfers/get"
            ]
          },
          {
            "group": "Accounts",
            "pages": [
              "api-reference/accounts/create",
              "api-reference/accounts/deposit",
              "api-reference/accounts/transfer",
              "api-reference/accounts/get",
              "api-reference/accounts/get-by-operator"
            ]
          },
          {
            "group": "Faucet",
            "pages": [
              "api-reference/faucet/request"
            ]
          }
        ]
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "claude",
      "chatgpt",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/silkyway",
      "github": "https://github.com/silkyway-protocol"
    }
  }
